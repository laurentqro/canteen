= form_for @read_entry do |f|
  - if @read_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@read_entry.errors.count, "error")} prohibited this read_entry from being saved:"
      %ul
        - @read_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :entry_id
    = f.text_field :entry_id
  .actions
    = f.submit 'Save'
