!!! 5
%html
  %head
    %title CantineApp
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body

    .container

      #topbar
        =link_to image_tag("logo.png", alt: "Canteen Logo", :id => 'logo'), feeds_path
        - if current_user
          = link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to logout?'}
        / search box on right

      #sidebar
        - if current_user
          h4%
          = "Hello #{current_user.first_name} #{current_user.last_name}"
          = render 'feeds/index'

        - else
          %h2 Sign In
          .login
            = form_tag user_session_path do
              %br
              = link_to "Forgotten your password?", new_password_path('user')
              %br

              = text_field_tag 'user[email]', nil, :placeholder => "Email Address"
              = password_field_tag 'user[password]', nil, :placeholder => "Password"
              %br

              = check_box_tag 'user[remember_me]'
              Remember me
              %br
              %button Sign In

      #reader

      %p.notice
        = notice
      %p.alert
        = alert

      = yield


= link_to 'New Feed', new_feed_path