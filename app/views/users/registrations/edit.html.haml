= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!

  = f.label :email
  %br
  = f.email_field :email, :autofocus => true
  %br
  %br 
  = f.label :first_name
  %br
  = f.text_field :first_name
  %br
  %br
  = f.label :last_name
  %br
  = f.text_field :last_name
  %br
  %br
  = f.label :avatar
  %br
  .submitbutton= f.file_field :avatar
  %br
  %br
  = f.label :bio
  %br
  = f.text_area :bio
  %br
  %br
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  = f.label :password
  %br
  <em>(leave blank if you don't want to change it)</em>
  %br
  = f.password_field :password, :autocomplete => "off"
  %br
  %br
  = f.label :password_confirmation
  %br
  = f.password_field :password_confirmation
  %br
  %br
  = f.label :current_password
  %br
  <em>(we need your current password to confirm your changes)</em>
  %br
  = f.password_field :current_password
  %br
  %br
  .submitbutton= f.submit "Update"
%br
.submitbutton= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete