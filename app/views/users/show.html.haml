-if current_user == @user
  .userfeeds
    .profile
      .placeholderavatar= image_tag @user.avatar.thumb
      .profiledetails
        %h2
          =@user.first_name
          =@user.last_name
        %p
          = @user.email
  %h4 Your feeds
  .userfeeds
    -@current_user.subscriptions.each do |subscription|
      .feedtileparent
        .feedtileprofile
          - if subscription.feed.image
            = link_to(image_tag(subscription.feed.image), feed_path)
          - else
            .placeholder= link_to(image_tag("placeholder.png"), feed_path)
          %br
        .feedtiletext
          = link_to "#{subscription.feed.title}", feed_path
  .userfeeds
    %h4 About Me
    %p
      =@user.bio
    %br
    .iconleft= link_to image_tag("edit.png", alt: "Edit Profile", :id => 'editbig'), edit_user_registration_path
    .iconleft= link_to image_tag("trash.png", alt: "Delete Profile", :id => 'trashbig'), users_path, method: :delete, data: { :confirm => 'Are you sure?' }

-else
  .userfeeds
    .profile
      .placeholderavatar= image_tag @user.avatar.thumb
      .profiledetails
        %h2
          =@user.first_name
          =@user.last_name
        %p
          = @user.email
        %p
          =@user.bio
  %br
  %h4 #{@user.first_name}'s feeds
  .userfeeds
    -@user.subscriptions.each do |subscription|
      .feedtileparent
        .feedtileprofile
          - if subscription.feed.image
            = link_to(image_tag(subscription.feed.image), feed_path)
          - else
            .placeholder= link_to(image_tag("placeholder.png"), feed_path)
          %br
        .feedtiletext
          = link_to "#{subscription.feed.title}", feed_path
    
