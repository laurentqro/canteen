-if current_user == @user
  .userfeeds
    = image_tag @user.avatar
    %br  
    %h4
      =@user.first_name
      =@user.last_name
    %p
      = @user.email
    %br
    %h4 Your feeds
  .userfeeds
    -@subscriptions.each do |subscription|
      .feedtileprofile
        = link_to(image_tag(subscription.feed.image), feed_path) if subscription.feed.image
        %br
        = link_to "#{subscription.feed.title}", feed_path
  .userfeeds
    %h4 About Me
    %p
      =@user.bio
    %br
    =link_to 'Edit Profile',  edit_user_path(@user)
    =link_to 'Delete Profile', @user, method: :delete, data: { confirm: 'Are you sure?' }

-else
  .userfeeds
    = image_tag @user.avatar
    %br  
    %h4
      =@user.first_name
      =@user.last_name
    %br
    %h4 Your feeds
  .userfeeds
    -@subscriptions.each do |subscription|
      .feedtileprofile
        = link_to(image_tag(subscription.feed.image), feed_path) if subscription.feed.image
        %br
        = link_to "#{subscription.feed.title}", feed_path
  .userfeeds
    %h4 About Me
    %p
      =@user.bio