.entryshow
  %p#notice= notice

  %p
    = @entry.title
  %p
    = @entry.author
  %p
    -unless @entry.image == nil
      = image_tag @entry.image
  %p
    = @entry.summary.html_safe
  %p
    %b Published on:
    -if @entry.published_on
      = @entry.published_on.strftime("%a %d %b %Y")

  = link_to image_tag("original.png", alt: "View Original Source", :id => 'original'), @entry.url
  = link_to image_tag("unread.png", alt: "Mark Unread", :id => 'unread'), {remote: true}, :data => {:entry_id => @entry.id}  
  = link_to image_tag("bookmark.png", alt: "Bookmark", :id => 'bookmark'), method: :bookmark
